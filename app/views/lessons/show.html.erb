<%- model_class = Lesson -%>
<div class="row-fluid">
  	<div class="span12 content">

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @lesson.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:coach_id) %>:</strong></dt>
  <dd><%= @lesson.coach_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @lesson.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_id) %>:</strong></dt>
  <dd><%= @lesson.location_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:private) %>:</strong></dt>
  <dd><%= @lesson.private %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lessons_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lesson_path(@lesson), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lesson_path(@lesson),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

	</div>
</div>